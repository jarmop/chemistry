{
  "tasks": {
    "dev": "deno run -A --node-modules-dir=auto npm:vite",
    "build": "deno run -A --node-modules-dir=auto npm:vite build",
    "server:start": "deno run -A --node-modules-dir --watch ./server/main.ts",
    "serve": "deno task build && deno task server:start"
  },
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.5",
    "@oak/oak": "jsr:@oak/oak@^17.1.6",
    "@react-three/drei": "npm:@react-three/drei@^10.7.3",
    "@react-three/fiber": "npm:@react-three/fiber@^9.3.0",
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "@types/react": "npm:@types/react@^19.1.2",
    "@types/three": "npm:@types/three@^0.179.0",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^5.0.1",
    "react": "npm:react@^19.1.0",
    "react-dom": "npm:react-dom@^19.1.0",
    "react-router-dom": "npm:react-router-dom@^7.8.1",
    "three": "npm:three@^0.179.1",
    "vite": "npm:vite@^7.1.3",
    "zustand": "npm:zustand@^5.0.8"
  },
  "compilerOptions": {
    "types": [
      "react",
      "react-dom",
      "@types/react"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
